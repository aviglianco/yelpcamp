<%- include("../partials/header"); %>

<div class="container">
    <h1 class="text-center" style="margin-bottom: 30px; margin-top: 100px">Add new comment to <%= campground.name %> </h1>
    <div class="row">    
        <div style="width: 30%; margin: 0 auto">
            <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
                <div class="form-group">
                    <input type="text" class="form-control" id="newCampName" name="comment[text]" placeholder="Enter your comment">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="newCampImg" name="comment[author]" placeholder="Enter the name of the author">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit!</button>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>