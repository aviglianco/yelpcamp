<%- include("partials/header"); %>
<div class="container">
    <h1 class="text-center" style="margin-bottom: 30px; margin-top: 100px">Create new Campground</h1>
    <div class="row">    
        <div style="width: 30%; margin: 0 auto">
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <input type="text" class="form-control" id="newCampName" name="newCampName" placeholder="Enter the name of the campground">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="newCampImg" name="newCampImg" placeholder="Enter the image URL">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" id="newCampDesc" name="newCampDesc" placeholder="Enter a description for the campground"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit!</button>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include("partials/footer"); %>

