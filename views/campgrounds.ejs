<%- include("partials/header"); %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome to YelpCamp</h1>
            <p class="lead">View our hand-picked collection of campgrounds from the entire world</p>
            <p class="lead">
            <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Submit new!</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campsites</h3>
        </div>
    </div>

    <div class="row">
        <% campgrounds.forEach(function (campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%=campground.img%>">
                    <div class="card-body">
                        <h4><%=campground.name%></h4>
                        <a href="#" class="btn btn-primary">View more</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<a href="/">Back to the home page</a>

<%- include("partials/footer"); %>